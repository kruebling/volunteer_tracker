<div class="jumbotron">
  <h1> <%=@project.title() %> </h1>
</div>

<h3>Enter a new volunteer for this project:</h3>


<form action="/volunteers/<%= @project.id() %>" method="post">
  <label for="name">Volunteer name:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Add Volunteer</button>
</form><br>

<% if @volunteers.any?() %>
  <% @project.volunteers() %>
    <p>Here are all the volunteers associated with this project:</p>

    <ul>
      <% @project.volunteers.each do |volunteer| %>
      <li><a href="/volunteers/<%= volunteer.id() %>"><%= volunteer.name() %></a></li>
      <% end %>
    </ul>
<% end %>


<form action="/project/<%= @project.id() %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="title">Rename your project:</label>
  <input type="text" name="title" id="title">

  <button type="submit">Update Project</button>
</form>

<form action="/project/<%= @project.id() %>" method="post">
  <input type="hidden" name="_method" value="delete">

  <button type="submit">Delete Project</button>
</form>

<p><a href="/">Return to Project Page</a></p>
